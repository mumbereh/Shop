<h1>Sales</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.total %></td>
        <td><%= sale.created_at.to_date %></td>
        <td>
          <%= link_to 'Show', sale_path(sale) %>
          <%= link_to 'Edit', edit_sale_path(sale) %>
          <%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Sale', new_sale_path %>
