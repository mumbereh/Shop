<h1>Weekly Sales Report</h1>

<table>
  <thead>
    <tr>
      <th>Total</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= sale.total %></td>
        <td><%= sale.created_at.to_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Reports', root_path %>
